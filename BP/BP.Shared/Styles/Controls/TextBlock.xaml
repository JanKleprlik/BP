<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<Style x:Key="DefaultTextBlock" TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}">
		<Setter Property="FontFamily" Value="{StaticResource Sansation}"/>
		<Setter Property="TextWrapping" Value="Wrap"/>
		<Setter Property="TextAlignment" Value="Center"/>
		<Setter Property="Foreground" Value="White"/>
	</Style>

	<Style TargetType="TextBlock" BasedOn="{StaticResource DefaultTextBlock}"/>
	
</ResourceDictionary>
